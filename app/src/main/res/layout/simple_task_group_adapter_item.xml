<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#651FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true">

        <TextView
            android:id="@+id/simple_task_adapter_task_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:text="Task summary"
            android:textColor="#FFFFFF"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/simple_task_adapter_task_item_title"
            android:text="This is sub title...."
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:text="12:54 am"
            android:textSize="12sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>