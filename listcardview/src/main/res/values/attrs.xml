<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ListCardView">
        <!-- header -->
        <attr name="headerTextColor" format="color"/>
        <attr name="headerTextLeftMargin" format="dimension"/>
        <attr name="headerTextRightMargin" format="dimension"/>
        <attr name="headerTextTopMargin" format="dimension"/>
        <attr name="headerTextBottomMargin" format="dimension"/>
        <attr name="headerTextSize" format="dimension"/>
        <attr name="headerText" format="string"/>

        <!-- divider -->
        <attr name="dividerStrokeWidth" format="dimension"/>
        <attr name="dividerColor" format="color"/>
        <attr name="dividerLeftMargin" format="dimension"/>
        <attr name="dividerRightMargin" format="dimension"/>
        <attr name="showDivider" format="boolean"/>
        <attr name="showDividerBetweenHeaderAndFirstItem" format="boolean"/>

        <!-- items -->
        <attr name="itemsTopMargin" format="dimension"/>
        <attr name="itemsBottomMargin" format="dimension"/>
        <attr name="itemsLeftMargin" format="dimension"/>
        <attr name="itemsRightMargin" format="dimension"/>
    </declare-styleable>
</resources>